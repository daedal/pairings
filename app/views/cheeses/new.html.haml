=form_for @cheese do |f|
  .row
    .columns.large-1
      =f.label "Name:"
    .columns.large-2.pull-8
      =f.text_field :name, {required: true}
  .row
    .columns.large-1
      =f.label "Country:"
    .columns.large-2.pull-8
      =f.text_field :country_of_origin
  .row
    .columns.large-1
      =f.label "Region:"
    .columns.large-2.pull-8
      =f.text_field :region
  .row
    .columns.large-1
      =f.label "Milk type:"
    .columns.large-2.pull-8
      =f.text_field :milk
  .row
    .columns.large-1
      =f.label "Type:"
    .columns.large-2.pull-8
      =f.text_field :texture_type
  .row
    .columns.large-1
      =f.label "Color:"
    .columns.large-2.pull-8
      =f.text_field :color
  .row
    .columns.large-1
      =f.label "Age:"
    .columns.large-2.pull-8
      =f.text_field :age
  .row
    .columns.large-1
      =f.submit "Submit"
